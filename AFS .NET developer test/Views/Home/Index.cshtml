                <textarea class="form-control col-12" rows="5" id="textToTranslate"></textarea>
            </div>
        </div>
        <div>
            <div class="col">
                <label>Translation type</label>
                <select class="form-control col-3 " id="listBoxTranslationType" align="center">
                    <option>leetspeak</option>
